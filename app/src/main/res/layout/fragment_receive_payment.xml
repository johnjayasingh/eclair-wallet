<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/grey_0_light_x3"
  android:gravity="top|center"
  android:orientation="vertical">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.acinq.eclair.wallet.fragments.ReceivePaymentFragment">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/receivepayment_qr"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginBottom="@dimen/space_md"
        android:layout_marginLeft="@dimen/space_md"
        android:layout_marginRight="@dimen/space_md"
        android:layout_marginTop="@dimen/space_lg"
        android:clickable="true"
        android:focusable="true"
        android:onClick="copyReceptionAddress"
        android:src="@drawable/qrcode_placeholder" />

      <TextView
        android:id="@+id/receivepayment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="monospace"
        android:onClick="copyReceptionAddress"
        android:padding="16dp"
        android:text="@string/unknown"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="12sp" />

    </LinearLayout>
  </ScrollView>
</LinearLayout>
